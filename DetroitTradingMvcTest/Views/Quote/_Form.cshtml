@model DetroitTradingMvcTest.Models.VehicleViewModel

<form id="form">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(m => m.MakeId)
                @Html.DropDownListFor(m => m.MakeId, Enumerable.Empty<SelectListItem>())
                @Html.ValidationMessageFor(m => m.MakeId)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ModelId)
                @Html.DropDownListFor(m => m.ModelId, Enumerable.Empty<SelectListItem>())
                @Html.ValidationMessageFor(m => m.ModelId)
            </div>
            <div class="form-group">
                <button type="submit"
                        class="btn btn-primary">
                    Ok
                </button>
            </div>
        </div>
    </div>
</form>

<div class="modal fade" id="modal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Thank You</h4>
            </div>
            <div class="modal-body" id="modalBody">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

<script>
    $(function () {
        $.getJSON('/api/vehicle/makes', function (result) {
            var element = $('#MakeId');
            element.empty();
            $(document.createElement('option'))
                .attr('value', -1)
                .text('- Select a Make -')
                .appendTo(element);
            $(result).each(function () {
                $(document.createElement('option'))
                    .attr('value', this.Id)
                    .text(this.Description)
                    .appendTo(element);
            });
        });
    });

    $('#MakeId').change(function () {
        $.getJSON('/api/vehicle/models/' + this.value, function (result) {
            var element = $('#ModelId');
            element.empty();
            $(document.createElement('option'))
                .attr('value', -1)
                .text('- Select a Model -')
                .appendTo(element);
            $(result).each(function () {
                $(document.createElement('option'))
                    .attr('value', this.Id)
                    .text(this.Description)
                    .appendTo(element);
            });
        });
    });

    $('#form').submit(function (e) {
        var $form = $(this);

        $form.validate();
        if ($form.valid()) {
            $.ajax({
                type: 'POST',
                url: '/Quote/SaveVehicle',
                data: $(this).serialize(),
                success: function (data) {
                    $('#modalBody').html(data);
                    $("#modal").modal();
                }
            });
        };

        e.preventDefault();
    });
</script>
